<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="GPhysStore.MainWindow"
        Title="GPhys Store" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1b2838"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="SteamButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#66c0f4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#417a9b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2e5266"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#4c5c68"/>
                                <Setter Property="Foreground" Value="#8f98a0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#2a475e"/>
            <Setter Property="Foreground" Value="#66c0f4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#417a9b"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButton" TargetType="{x:Type Button}" BasedOn="{StaticResource TabButton}">
            <Setter Property="Background" Value="#66c0f4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="AddonCard" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#2a475e"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#171a21" Height="60" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="GPhys Store" FontSize="24" FontWeight="Bold" 
                          Foreground="#66c0f4" VerticalAlignment="Center"/>
                <Rectangle Width="20"/>
                <TextBlock Text="Your one-stop shop for GPhys and addons" 
                          FontSize="14" Foreground="#8f98a0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Background="#2a475e" Height="50" VerticalAlignment="Top" Margin="0,60,0,0" av:IsLocked="True">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Button x:Name="MainTabBtn" Content="GPhys" 
                       Style="{StaticResource ActiveTabButton}"
                       Click="MainTabBtn_Click"/>
                <Button x:Name="AddonsTabBtn" Content="Addons" 
                       Style="{StaticResource TabButton}"
                       Click="AddonsTabBtn_Click"/>
            </StackPanel>
        </Border>

        <Grid Margin="0,110,0,0">
            <Grid x:Name="MainContent" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource AddonCard}" Margin="20">
                    <StackPanel>
                        <TextBlock Text="GPhys" FontSize="32" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock Text="The experience Gorilla Tag was meant to be" 
                                  FontSize="16" Foreground="#8f98a0" Margin="0,0,0,20"/>

                        <TextBlock Text="Product Key:" FontSize="14" FontWeight="SemiBold"
                                  Foreground="White" Margin="0,0,0,5"/>
                        <TextBox x:Name="KeyBox" Height="35" FontSize="14" 
                                Background="#171a21" Foreground="White" 
                                BorderBrush="#66c0f4" BorderThickness="1"
                                Padding="10,5" Margin="0,0,0,15"/>

                        <Button x:Name="InstallBtn" Content="Install GPhys" 
                               Style="{StaticResource SteamButton}" 
                               Click="InstallBtn_Click" Height="40" FontSize="16"/>

                        <ProgressBar x:Name="InstallProgress" Height="25" 
                                    Margin="0,15,0,0" Visibility="Collapsed"
                                    Background="#171a21" Foreground="#66c0f4"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource AddonCard}" Margin="20">
                    <StackPanel>
                        <TextBlock Text="Installation Status" FontSize="18" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,15"/>

                        <TextBlock x:Name="StatusBlock" TextWrapping="Wrap" 
                                  Foreground="#8f98a0" FontSize="14" Margin="0,0,0,20"/>

                        <Border Background="#171a21" Padding="15" CornerRadius="3" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="System Information" FontWeight="SemiBold" 
                                          Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="GamePathBlock" TextWrapping="Wrap" 
                                          Foreground="#8f98a0" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="AddonsContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#2a475e" Padding="20,15" Margin="20,0,20,10">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Available Addons" FontSize="24" FontWeight="Bold" 
                                      Foreground="White" VerticalAlignment="Center"/>
                            <Rectangle Width="20"/>
                            <Button x:Name="RefreshAddonsBtn" Content="Refresh" 
                                   Style="{StaticResource SteamButton}" 
                                   Click="RefreshAddonsBtn_Click" Height="30"/>
                        </StackPanel>
                        <TextBlock x:Name="AddonsStatusBlock" Text="Loading addons..." 
                                  Foreground="#8f98a0" HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" Margin="20,0,20,20" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="AddonsListView">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource AddonCard}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding Name}" 
                                                  FontSize="18" FontWeight="Bold" 
                                                  Foreground="White" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="1" Text="{Binding Author}" 
                                                  FontSize="12" Foreground="#8f98a0" 
                                                  Margin="0,0,0,10"/>

                                        <TextBlock Grid.Row="2" Text="{Binding Description}" 
                                                  TextWrapping="Wrap" FontSize="14" 
                                                  Foreground="#c7d5e0" Margin="0,0,0,15"/>

                                        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                                                   HorizontalAlignment="Right">
                                            <Button Content="{Binding InstallButtonText}" 
                                                   Style="{StaticResource SteamButton}" 
                                                   Click="AddonActionBtn_Click" 
                                                   Tag="{Binding}" Height="32"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>